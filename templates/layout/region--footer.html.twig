{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'region',
    'region__' ~ region|clean_class
  ]
%}

{% if content %}

	{% block content %}
		<div{{attributes.addClass(classes)}}>

			{# <div class="footer-about item">
							<div class="footer-about__about">
								{{ drupal_entity('block_content', '10') }}
							</div>
						</div> #}

			<div class="footer-menu item">
				{{ drupal_menu('footer') }}
			</div>

			<div class="footer-social-subscribe">
				<div class="wrapper">


					<div class="subscribe">
						<h2>Subscribe to the Sound American Newsletter</h2>
						{{ drupal_block('mailchimp_signup_subscribe_block:newsletter', wrapper=false) }}
					</div>

					<div class="share">
						<h2>Follow Sound American</h2>
						{{ drupal_menu('social') }}
					</div>

				</div>
			</div>
		</div>
	{% endblock %}

{% endif %}
