{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <header>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'region',
    'region__' ~ region|clean_class
  ]
%}

<header{{attributes.addClass(classes)}}>

	<div class="header__first">
		<button class='hamburger hamburger--minus' type='button' role=" button">
			<span class='hamburger-box'>
				<span class='hamburger-inner'></span>
			</span>
		</button>
	</div>
	<div class="header__second">
		{{ drupal_block('system_branding_block') }}
		<div class="main">{{ drupal_menu('main') }}</div>
	</div>
	<div class="header__third">
		<div class="subscribe-search">
			<div class="subscribe">{{ drupal_menu('subscribe') }}</div>

			<div class="search">Search</div>
		</div>
	</div>
</header>
<progress max="0" value="0"></progress>
